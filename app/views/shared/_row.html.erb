<tr>
  <td><%= i[:name].upcase %></td>
  <% if i[:unit] %>
    <td><%= pluralize(i[:quantity], i[:unit]) %></td>
  <% else %>
    <td><%= i[:quantity] %></td>
  <% end %>
  <% if i[:expires_on] < Date.today %>
    <td class="text-danger"><%= distance_of_time_in_words_to_now(i[:expires_on]) %> ago</td>
  <% elsif (i[:expires_on] - Date.today) < 7 %>
    <td class="text-warning">this week</td>
  <% else %>
    <td><%= distance_of_time_in_words_to_now(i[:expires_on]) %></td>
  <% end %>

  <% if i[:location] == "fridge" %>
    <td><span class="badge rounded-pill bg-primary"><%= i[:location] %></span></td>
  <% elsif i[:location] == "freezer" %>
    <td><span class="badge rounded-pill bg-info"><%= i[:location] %></span></td>
  <% elsif i[:location] == "pantry" %>
    <td><span class="badge rounded-pill bg-success"><%= i[:location] %></span></td>
  <% else %>
    <td><span class="badge rounded-pill bg-dark"><%= i[:location] %></span></td>
  <% end %>
  <td>
    <i class="bi bi-info-circle"></i>
  </td>
</tr>
